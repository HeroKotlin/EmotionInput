<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/emotion_input_emotion_pager_bg_color">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.github.herokotlin.dotindicator.DotIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/emotion_input_indicator_margin_top"
        android:layout_marginBottom="@dimen/emotion_input_toolbar_margin_top"
        android:layout_gravity="center_horizontal"
        app:dot_indicator_color="@color/emotion_input_indicator_color_normal"
        app:dot_indicator_radius="@dimen/emotion_input_indicator_radius_normal"
        app:dot_indicator_active_color="@color/emotion_input_indicator_color_active"
        app:dot_indicator_active_radius="@dimen/emotion_input_indicator_radius_active"/>

    <com.github.herokotlin.emotioninput.view.EmotionToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</LinearLayout>